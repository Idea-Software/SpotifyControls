{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./build/",
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}